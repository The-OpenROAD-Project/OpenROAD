pipeline {
  agent any;
  environment {
    COVERITY_TOKEN = credentials('COVERITY_TOKEN');
  }
  stages {
    stage('Run Coverity') {
      steps {
        sh './etc/CodeCoverage.sh static';
      }
    }
  }
  post {
    failure {
      script {
        emailext (
            to:'$DEFAULT_RECIPIENTS',
            replyTo: '$DEFAULT_REPLYTO',
            subject: '$DEFAULT_SUBJECT',
            body: '$DEFAULT_CONTENT',
            );
      }
    }
  }
}
