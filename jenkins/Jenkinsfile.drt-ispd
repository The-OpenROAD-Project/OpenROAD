pipeline {
  agent any;
  stages {
    stage('Build') {
      steps {
        sh './etc/Build.sh';
      }
    }
    stage('Clean-up') {
      steps {
        sh 'rm -rf /home/jenkins/ispd/runs/*';
      }
    }
    stage('Test') {
      steps {
        sh './src/TritonRoute/test/run-ispd.tcl';
      }
    }
  }
  post {
    always {
      sh 'mv /home/jenkins/ispd/runs/*.tar.gz .';
      archiveArtifacts '*.tar.gz';
    }
  }
}
